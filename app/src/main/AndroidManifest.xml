<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.estsoft.travelfriendflow2">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light">

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>

        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_app_key"/>

        <activity
            android:name=".basic.SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".basic.MainActivity"
            android:icon="@drawable/logo"
            android:label="여친"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:uiOptions="splitActionBarWhenNarrow"
            android:windowSoftInputMode="adjustPan"></activity>

        <activity
            android:name=".basic.FirstStartActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            >
        </activity>
        <activity
            android:name=".basic.LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".basic.JoinActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".basic.JoinWithEmailActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <activity android:name=".lookaround.LookAroundActivity" />
        <activity android:name=".sale.SaleActivity" />
        <activity android:name=".korail.KorailActivity" />
        <activity android:name=".chat.ChatActivity" />
        <activity android:name=".mytravel.MyTravelActivity" />

        <activity
            android:name=".basic.SettingActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".AttractionActivity" />
        <activity
            android:name=".mytravel.NewTravelSettingActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!--<activity-->
            <!--android:name=".mytravel.MapActivity"-->
            <!--android:theme="@style/Theme.AppCompat.Light.NoActionBar" />-->
        <activity android:name=".mytravel.MyTravelListActivity" />
        <activity android:name=".mytravel.BookmarkListActivity" />
        <activity android:name=".chat.ChatMainActivity"></activity>

        <activity android:name=".map.MapViewActivity"></activity>
        <activity android:name=".mytravel.SelectCityActivity"></activity>
        <activity android:name=".mytravel.SelectedCityActivity"></activity>


    </application>

</manifest>