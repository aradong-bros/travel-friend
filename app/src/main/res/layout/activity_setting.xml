<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#FFF"
    tools:context="com.example.estsoft.travelfriendflow2.basic.MainActivity">

                <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/logo"
                    android:text="프로필 설정"
                    android:textSize="15sp"
                    android:textColor="@color/orange"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/profile"
                android:layout_marginTop="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:id="@+id/textView11"
                android:background="@drawable/rounded_edittext"
                android:padding="8dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="40dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView11"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_alignLeft="@+id/textView11"
                android:layout_alignStart="@+id/textView11">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Name"
                    android:textStyle="italic|bold"
                    android:textSize="18dp"
                    android:id="@+id/Text6"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="변경"
                    android:background="#FFF"
                    android:id="@+id/changeButton" />

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그아웃"
                android:background="#FFF"
                android:id="@+id/logoutButton"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/chagePasswordButton"
                android:layout_alignLeft="@+id/chagePasswordButton"
                android:layout_alignStart="@+id/chagePasswordButton" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="탈퇴"
                android:background="#FFF"
                android:id="@+id/WithdrawalButton"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/chagePasswordButton"
                android:layout_alignLeft="@+id/chagePasswordButton"
                android:layout_alignStart="@+id/chagePasswordButton" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="채팅서버IP"
                android:background="#FFF"
                android:id="@+id/setIPButton"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/WithdrawalButton"
                android:layout_alignLeft="@+id/WithdrawalButton"
                android:layout_alignStart="@+id/WithdrawalButton" />


</LinearLayout>
